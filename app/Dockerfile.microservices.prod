FROM node:20-alpine

ENV NPM_CONFIG_UPDATE_NOTIFIER=false
ENV NPM_CONFIG_FUND=false

WORKDIR /app

COPY package*.json ./

RUN npm ci

COPY . .

RUN npm run lint

FROM node:20-alpine

ENV NPM_CONFIG_UPDATE_NOTIFIER=false
ENV NPM_CONFIG_FUND=false

WORKDIR /app

ENV NODE_ENV=production

COPY --from=0 /app/package*.json ./

RUN npm ci --omit=dev && npm cache clean --force

COPY --from=0 /app .

RUN mkdir -p /data && chown -R node:node /data

USER node

ARG PORT=3000
ENV PORT=${PORT}
EXPOSE ${PORT}

CMD ["npm", "run", "start"]