FROM node:20-alpine

WORKDIR /app

COPY . .

WORKDIR /app/Shared
RUN npm install && npm run build

WORKDIR /app/Offline
RUN npm install
RUN npm run build -- --base=/game/

# Copy dist to shared volume on startup, then keep container alive (for your Node server later)
CMD ["sh", "-c", "cp -r /app/Offline/dist/* /pong-dist/ && echo 'Pong dist copied to volume' && tail -f /dev/null"]