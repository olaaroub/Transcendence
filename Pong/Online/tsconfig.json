{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "lib": ["ES2023", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["client/*.ts"],
  "exclude": ["node_modules"]
}
